public class Main {
    public static void main(String[] args) {
        String s = "Programlama";
        for (int i = 0; i < s.length(); i++) {
            System.out.print(s.charAt(i));
            for (int j = 0; j < i; j++) {
                System.out.print("a");
            }
            System.out.print("p");
        }
    }
}